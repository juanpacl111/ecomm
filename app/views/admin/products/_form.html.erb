<%= form_with(model: [:admin, admin_product], class: "contents") do |form| %>
  <% if admin_product.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-700 p-4 rounded-lg mt-3">
      <h2><%= pluralize(admin_product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% admin_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name, class: "block font-medium text-gray-700" %>
    <%= form.text_field :name, class: "block w-full mt-1 p-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="my-5">
    <%= form.label :description, class: "block font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "block w-full mt-1 p-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="my-5">
    <%= form.label :price, class: "block font-medium text-gray-700" %>
    <%= form.number_field :price, class: "block w-full mt-1 p-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="my-0">
    <% if admin_product.images.any? %>
      <% admin_product.images.each do |image| %>
        <%= image_tag image, class: "w-20 h-20" %>
      <% end %>
    <% end %>
    <%= "not" %>
    <%= form.file_field :images, multiple: true, class: "block w-full mt-1 p-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div class="my-5">
    <%= form.label :category_id, class: "block font-medium text-gray-700" %>
    <%= form.select :category_id, @admin_categories.collect { |c| [c.name, c.id] }, {}, {class: "block w-full mt-1 p-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"} %>
  </div>
  <div class="my-5 flex items-center">
    <%= form.label :active, class: "block font-medium text-gray-700" %>
    <%= form.check_box :active, class: "ml-2 block h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
  </div>
  <div class="my-5">
    <%= link_to "Product Stock", admin_product_stocks_path(admin_product), class: "block font-medium text-blue-600" %>
  </div>
  <div class="inline">
    <%= form.submit "Submit", class: "mt-3 py-2 px-4 bg-blue-600 text-white font-medium rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
